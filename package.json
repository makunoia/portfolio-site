{
  "name": "portfolio-site",
  "description": "A portfolio site made with Payload CMS 3.0 and Next.JS 15",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev --turbopack",
    "devturbo": "cross-env NODE_OPTIONS=--no-deprecation next dev --turbo",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "prebuild": "node set-build-date.js",
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "ci": "payload migrate && npm build",
    "generate:types": "payload generate:types",
    "generate:importmap": "payload generate:importmap"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.731.1",
    "@lexical/headless": "^0.23.0",
    "@lexical/html": "^0.23.0",
    "@lexical/link": "^0.23.0",
    "@lexical/list": "^0.23.0",
    "@lexical/mark": "^0.23.0",
    "@lexical/react": "^0.23.0",
    "@lexical/rich-text": "^0.23.0",
    "@lexical/selection": "^0.23.0",
    "@lexical/table": "^0.23.0",
    "@lexical/utils": "^0.23.0",
    "@next/bundle-analyzer": "15.1.5",
    "@payloadcms/db-mongodb": "latest",
    "@payloadcms/db-postgres": "latest",
    "@payloadcms/email-nodemailer": "latest",
    "@payloadcms/next": "latest",
    "@payloadcms/richtext-lexical": "latest",
    "@payloadcms/storage-s3": "latest",
    "@payloadcms/ui": "latest",
    "@radix-ui/react-accordion": "^1.2.2",
    "@types/uuid": "^10.0.0",
    "babel-plugin-react-compiler": "19.0.0-beta-decd7b8-20250118",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cobe": "^0.6.3",
    "cross-env": "^7.0.3",
    "framer-motion": "^12.0.0",
    "globe.gl": "^2.39.0",
    "graphql": "^16.10.0",
    "lexical": "^0.23.0",
    "next": "15.1.5",
    "next-themes": "^0.4.4",
    "payload": "latest",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "sharp": "0.33.5",
    "sonner": "^1.7.2",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.172.0"
  },
  "devDependencies": {
    "@next/env": "15.1.5",
    "@radix-ui/react-form": "^0.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@swc/core": "^1.10.8",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "19.0.7",
    "@types/react-dom": "19.0.3",
    "@types/three": "^0.172.0",
    "@vercel/analytics": "^1.4.1",
    "@vercel/speed-insights": "^1.1.0",
    "cssnano": "^7.0.6",
    "eslint": "^9.18.0",
    "eslint-config-next": "15.1.5",
    "lucide-react": "^0.473.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "5.7.3"
  }
